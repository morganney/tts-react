{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/packages/tts-react/src/**/*.ts",
    "**/packages/tts-react/src/**/*.tsx",
    "!**/node_modules/**"
  ],
  "coverageReporters": [
    "json",
    "lcov",
    "text",
    "clover",
    "text-summary"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "modulePathIgnorePatterns": ["dist"],
  "resolver": "ts-jest-resolver",
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
  "testEnvironment": "jsdom",
  "testMatch": [
    "**/__tests__/**/*.ts",
    "**/__tests__/**/*.tsx",
    "!**/__tests__/**/*.mock.ts"
  ]
}
